{
  "name": "nicekids-nodejs-mpa",
  "version": "1.0.0",
  "description": "NiceKids Early Childhood Education Management System",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./public/css/styles.css --watch"
  },
  "dependencies": {
    "@google/genai": "^0.14.0",
    "@supabase/supabase-js": "^2.43.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  }
}
